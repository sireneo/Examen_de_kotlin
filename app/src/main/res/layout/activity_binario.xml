<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".binario">

  <Button
      android:id="@+id/btn_atras_binario"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="15dp"
      android:background="@color/btnoff"
      android:text="Atras"
      android:textColor="@android:color/background_dark"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="7dp"
      android:text="Generador Sucecion Binaria"
      android:textColor="@android:color/black"
      android:textSize="24sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_atras_binario" />

  <EditText
      android:id="@+id/input_numero_binario"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="19dp"
      android:ems="10"
      android:hint="Ingrese Numero"
      android:inputType="number"
      android:maxLength="10"
      android:textColor="@android:color/background_dark"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <Button
      android:id="@+id/gen__binario"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginLeft="6dp"
      android:layout_marginTop="17dp"
      android:background="@color/btnoff"
      android:text="Generar"
      android:textColor="@android:color/black"
      app:layout_constraintStart_toEndOf="@+id/input_numero_binario"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:id="@+id/txt_area_binario"
      android:layout_width="315dp"
      android:layout_height="420dp"
      android:layout_marginStart="25dp"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="28dp"
      android:textColor="@android:color/black"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/input_numero_binario" />
</androidx.constraintlayout.widget.ConstraintLayout>